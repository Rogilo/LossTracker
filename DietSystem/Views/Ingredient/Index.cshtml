@model IEnumerable<Ingredient>

@{
    ViewData["Title"] = "Список інгрідієнтів";
    bool isAuthenticated = User.Identity?.IsAuthenticated == true;
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Назва</th>
                    <th>Категорія</th>
                    <th>Список дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @item.Id
                        </td>
                        <td class="align-middle">
                            @item.Name
                        </td>
                        <td class="align-middle">
                            @item.IngredientCategory
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Змінити</a>
                            <a class="btn btn-outline-danger"  asp-action="Delete"  asp-route-id="@item.Id"><i class="bi bi-trash"></i>Видалити</a>
                        </td>
                    </tr>                
                }
            </tbody>
        </table>
    </div>
</div>

<div style="position: fixed; right: 40px; bottom: 70px;" class="text-white">s
    <a asp-controller="Ingredient" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Додати</a>
</div>