@using DietSystem.Data.Enum;
@using RunDietSystem.Data.Enum;
@model Ingredient;

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name of the ingredient">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IngredientCategory">Ingredient category</label>
        <select asp-for="IngredientCategory" asp-items="@Html.GetEnumSelectList<IngredientCategory>()" class="form-control form-control">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="IngredientCategory" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>