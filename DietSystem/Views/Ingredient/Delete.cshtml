@model Ingredient;
@{
    ViewData["Title"] = "Delete igredient";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to igredients </a>
                    </div>
            </div>
        </div>
    </div>
</div>
