@model Dish

@{
    ViewData["Title"] = "Dish Detail";
}

<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        @Model.Name
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Ingredients:</h3>
           @* <p>@Model.Ingredients</p>*@
            <h3 class="my-3">Method of cooking:</h3>
            <p>@Model.MethodOfCooking</p>
            <h3 class="my-3">Nutrient value in 100 g of the product:</h3>
            <ul>
                <li>Proteins: @Model.Proteins g;</li>
                <li>Fats: @Model.Fats g;</li>
                <li>Carbohydrates: @Model.Carbohydrates g;</li>
                <li>Energy value of the product: @Model.Calories kcal;</li>
            </ul>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">Related Projects</h3>

    <div class="row">

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
                <img class="img-fluid" src="https://via.placeholder.com/500x300" alt="">
            </a>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
