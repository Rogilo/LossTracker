@model IEnumerable<Dish> 

@{
    ViewData["Title"] = "Dish Page";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Assortment of dishes</h1>
        <p class="lead text-muted">In this section there are dishes that you can add to your diet</p>
        <p>
            <a href="#" class="btn btn-primary my-2">Main call to action</a>
            <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.Image" width="100" height="340" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                                    @*<p class="card-text">Ingredients: @item.Ingredients</p>*@
                            <div class="d-flex justify-content-between align-items-center">
                                   <a type="btn btn-success" asp-controller="Dish" asp-action="Detail" asp-route-id="@item.Id" 
                                             class="btn btn btn-outline-secondary">View</a>
                                    <a type="btn btn-success" asp-controller="Dish" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn btn-outline-secondary">Edit</a>
                                <small class="text-body-secondary">@item.DishCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            }     
        </div>
    </div>
</div>